{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    "class-methods-use-this": "off",
    "operator-linebreak": "off",
    "no-promise-executor-return": "off"
  },
  "overrides": [
    {
      "files": ["*.spec.js"],
      "rules": {
        "newline-per-chained-call": "off",
        "no-unused-expressions": "off",
        "import/no-extraneous-dependencies": [
          "error",
          { "devDependencies": true }
        ]
      }
    }
  ]
}
